# Production Environment Configuration
# Copy this file to .env on your production server and update the values

# Server Configuration
PORT=9876
NODE_ENV=production

# Database
DATABASE_PATH=./food-search.db

# Session
SESSION_SECRET=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING

# JWT Configuration
JWT_SECRET=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING
JWT_EXPIRES_IN=7d

# Default Admin Account Configuration (OPTIONAL)
# Only needed if you want to create an initial admin via environment variables
# Otherwise, admins can be invited via the invitation system
# ADMIN_EMAIL=admin@devhub.tech
# ADMIN_PASSWORD=your-secure-admin-password-here

# Email Configuration (Required for invitations and notifications)
# Using custom SMTP server: dobby.devhub.tech
EMAIL_HOST=dobby.devhub.tech
EMAIL_PORT=587
EMAIL_USER=_mainaccount@dobby.devhub.tech
EMAIL_PASSWORD=your-cpanel-password-here
EMAIL_FROM=Dobby Food Search <noreply@dobby.devhub.tech>

# Application URLs
APP_URL=https://food-api.tigan.dev
FRONTEND_URL=https://food.tigan.dev

# Allowed Email Domains (comma-separated)
ALLOWED_EMAIL_DOMAINS=@devhub.tech,@titans.net,@solidstake.com

# CORS Configuration (comma-separated origins with protocol)
# Include all domains that will access the API
CORS_ORIGIN=https://food.tigan.dev,http://food.tigan.dev
